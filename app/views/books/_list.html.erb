    <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format:"jpeg", fallback: "no_image.jpg"%>
    <p>name</p>
    <%= user.name %>
    <p>intoroduction</p>
    <%= user.introduction %>
    <%= link_to "edit",  edit_user_path(user.id),class: "glyphicon glyphicon-wrench" %>
    <h2>New book</h2>
