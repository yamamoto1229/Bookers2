<p id="notice"></p>
<div class="container">
 <div class="row">
  <%= render 'books/list',book: @book, user: @user %>
    <div class="col-xs-9">
     <table class="table table-striped">
      <h2>Books</h2>
       <thead>
         <tr>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
         </tr>
       </thead>

       <tbody>
         <% @users.each do |user| %>
         <tr>
          <td><%= attachment_image_tag user, :profile_image,size: '30x30', format:"jpeg", fallback: "no_image.jpg"%></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
